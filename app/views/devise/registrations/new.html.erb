<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">

      <h1>Zarejestruj się</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }, class: "form-horizontal") do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-center" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control text-center" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control text-center" %>
        </div>
        
        <button class="btn btn-default" type="btn-submit" class="actions" style="margin-top: 10px;">
          Potwierdź
        </button>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
