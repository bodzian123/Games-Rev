<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">

      <h1>Zaloguj się</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-center" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "control-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control text-center" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me  %>
            <%= f.label :remember_me, class: "control-label" %>
          </div>
        <% end -%>

        <button class="btn btn-default" type="btn-submit" class="actions">
          Potwierdź
        </button>

      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
