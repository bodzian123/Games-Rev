<h1>List of movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>About</th>
    <th></th>
  </tr>

  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.text %></td>
      <td><%= link_to 'Show', movie_path(movie) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add new review', new_movie_path %>
<%= link_to 'Main page', home_index_path %>
