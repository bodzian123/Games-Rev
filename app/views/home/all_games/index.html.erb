<h1>List of games</h1>

<table>
  <tr>
    <th>Title</th>
    <th>About</th>
    <th></th>
  </tr>

  <% @games.each do |game| %>
    <tr>
      <td><%= game.title %></td>
      <td><%= game.text %></td>
      <td><%= link_to 'Show', game_path(game) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add new review', new_game_path %>
<%= link_to 'Main page', home_index_path %>
