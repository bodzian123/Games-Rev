<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="row">
        <div class="col-sm-3">
          <%= link_to('Wroć', games_path, style:"color:white;text-decoration:none;font-family: georgia;font-size:20px;font-weight: bold;") %>
        </div>
        <div class="col-sm-3">
          <%= link_to( 'Edytuj', edit_game_path(@user_game), style:"color:white;text-decoration:none;font-family: georgia;font-size:20px;font-weight: bold;") %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="row">
          <div class="col-lg-6">
            <h2>
              <strong>Tytuł:</strong>
            </h2>
          </div>
          <div class="col-md-6">
            <h2>
              <strong>Opis:</strong>
            </h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6" style="height:40vh; background-color: white; border: 1px solid black;">
            <p style="background-color: white">
            <%= @user_game.title %>
            </p>
          </div>
          <div class="col-md-6" style="height:40vh; background-color: white; border: 1px solid black; overflow-y: scroll; overflow-x: hidden; word-wrap: break-word;">
            <p style="background-color: white">
              <%= @user_game.text %>
            </p>
          </div>
        </div>
        <div class="row">
          <div clss="col-md-6">

            <h2>Skomentuj:</h2>
            <%= render 'comments/form' %>
          </div>
        </div>

      </div>

      <div class="col-lg-6">

      </div>

    </div>
  </div>
</div>
